#include <sodium.h>
#include <stdio.h>

FILE* open_file(char* filename, char* type) {

  FILE* file = fopen(filename, type);
  if(file == NULL) {
    perror("opening file");
    exit(2);
  }

  return file;
}

void write_bin(char* filename, unsigned char* key) {

  FILE* file = open_file(filename, "wb");
  fputs(key, file);
  fclose(file);
  
}

void write(char* filename, unsigned char* message) {

  FILE* file = open_file(filename, "w");
  fputs(message, file);
  fclose(file);
  
}

void read_key(char* filename, unsigned char* key, int size) {

  FILE* file = open_file(filename, "rb");
  //read from file
  fgets(key, size, file);
  fclose(file);
  
}

int count_chars(FILE* file) {
  int count = 0;
  char cur = fgetc(file);
  
  while(cur != EOF) {
    count++;
    cur = fgetc(file);
  }

  return count;

}

void read_file(FILE* file, char* plaintext, int size) {
  //read from file
  fgets(plaintext, size, file);
  fclose(file);

}

int main(int argc, char* argv[]) {

  if(sodium_init() == -1) {
    return 1;
  }
  
  FILE* plaintext_file = open_file(argv[1], "r");
  int plaintext_len = count_chars(plaintext_file);
  int ciphertext_len = crypto_box_MACBYTES + plaintext_len;
  unsigned char plaintext[plaintext_len + 1];
  read_file(plaintext_file, plaintext, plaintext_len);

  unsigned char encryption_key[crypto_box_PUBLICKEYBYTES];
  unsigned char decryption_key[crypto_box_SECRETKEYBYTES];
  unsigned char nonce[crypto_box_NONCEBYTES];
  unsigned char ciphertext[ciphertext_len];
  
  read_key("e-key-recipt.bin", encryption_key, crypto_box_PUBLICKEYBYTES);
  read_key("d-key-sender.bin", decryption_key, crypto_box_SECRETKEYBYTES);
  randombytes_buf(nonce, sizeof nonce);

  crypto_box_easy(ciphertext, plaintext, plaintext_len, nonce, encryption_key,
                  decryption_key);

  
  unsigned char sig_constr[crypto_sign_SECRETKEYBYTES];
  unsigned char signed_message[crypto_sign_BYTES + plaintext_len];
  unsigned long long signed_message_len;
  read_key("sig-constr-sender.bin", sig_constr, crypto_sign_SECRETKEYBYTES);
  crypto_sign(signed_message, &signed_message_len, ciphertext,
              ciphertext_len, sig_constr);

  write("signed-ciphertext.bin", signed_message);
  
  return 0;
}
